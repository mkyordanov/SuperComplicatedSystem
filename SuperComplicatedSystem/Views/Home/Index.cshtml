@model List<SuperComplicatedSystem.Models.PC>


@for (int i = 0; i < Model.Count; i++)
{
    <div class="PC">
        <div class="name">
            <span class="plus">+</span>
            <span class="file">@Model[i].name </span>
            @foreach (var component in Model[i].components)
            {
                <div class="type">
                    <span class="plus type">+</span>
                    <span class="type file">@component.Type</span>
                    <div class="model">
                        <span></span>
                        <span class="model">@component.Model</span>
                    </div>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/expandCollapse")
}